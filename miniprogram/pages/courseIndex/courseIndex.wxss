
/* 今日课表模板 */
.works{
  background: #f0f3f8;
  top: 11px;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  /* top: 10px; */
  padding: 0px 20rpx;
}

.pubTitle{
  display: flex;
  align-items: center;
}
.works .txt{
  font-size: 34rpx;
  padding: 0 10rpx;
  border-left: 8rpx solid #0b92ec;
}

.works .more{
  font-size: 32rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.course-body{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height: 200rpx;
}
.course-tip{
  margin-top: 100rpx;
  font-size: 32rpx;
  color: #666;
}
.course-explain{
  text-align: center;
  color: #666;
  padding: 0rpx 100rpx 80rpx 100rpx;
  font-size: 24rpx;
}
.arrow {
  width: 18rpx;
  height: 18rpx;
  border-top: 5rpx solid #bdbdbd;
  border-right: 5rpx solid #bdbdbd;
  transform: rotate(45deg);
  margin: 5rpx 10rpx 0 5rpx;
}
.course-list{
  position: relative;
  top: 27px;
  width: 100%;
}

.course-contnet{
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0rpx 20rpx 30rpx 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 2rpx 2rpx 10rpx 2rpx #ddd;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.course-contnet-title{
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.course-contnet-txt{
  font-size: 30rpx;
  color: #666;
}